@page
@model aspnetcoreapp.Pages_Cities.IndexModel

@{
    ViewData["Title"] = "Cities";
}

<h1>Cities</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>


<form>
    <p>
        <select asp-for="SearchCountry" asp-items="Model.Countries">
            <option value="">All</option>
        </select>
        <br />

        Search on name <input type="text" asp-for="SearchName" />
        <input type="submit" value="Go" />
    </p>
</form>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.City[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City[0].PublishDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City[0].Country)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City[0].Json)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.City) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PublishDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Country)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Json)
            </td>            
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
